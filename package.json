{
  "name": "@hopets/prompter",
  "version": "1.0.0",
  "description": "Bare-compatible nodejs readline interface abstraction",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
