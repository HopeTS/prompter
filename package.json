  "author": "Jenna (HopeTS) <jennabaudelaire@pm.me> (https://github.com/HopeTS)",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/HopeTS/prompter/issues"
  },
  "homepage": "https://github.com/HopeTS/prompter#readme",
  "dependencies": {
    "bare-process": "^4.2.1",
    "bare-readline": "^1.1.0",
    "process": "^0.11.10",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
